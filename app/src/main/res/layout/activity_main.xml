<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="info"
        android:textColor="#000000"
        android:textSize="28sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="counter"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="+"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="-"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonNull"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="rnd"
                android:textSize="20sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="info"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="device"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="time"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonToast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="toast"
                android:textSize="20sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="color"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/infoColorRed"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="r"
            android:textSize="20sp" />

        <Button
            android:id="@+id/infoColorGreen"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="g"
            android:textSize="20sp" />

        <Button
            android:id="@+id/infoColorBlue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="b"
            android:textSize="20sp" />

        <Button
            android:id="@+id/infoColorMagenta"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="m"
            android:textSize="20sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="background"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonBackgroundColorOne"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBackgroundColorTwo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBackgroundColorThree"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBackgroundColorFor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="4"
                android:textSize="20sp" />
        </LinearLayout>
    </HorizontalScrollView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="image"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="cat"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="dog"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonParrot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="parrot"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonImageRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="rnd"
                android:textSize="20sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:src="@drawable/cat" />

</LinearLayout>