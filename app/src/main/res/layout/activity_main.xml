<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Output"
        android:textColor="#000000"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="counter"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="0" />

        <Button
            android:id="@+id/random"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="rnd"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="info"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/device"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Device" />

        <Button
            android:id="@+id/time"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Time" />

        <Button
            android:id="@+id/toast"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="toast" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="color"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="r"
            android:textSize="20sp" />

        <Button
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="g"
            android:textSize="20sp" />

        <Button
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="b"
            android:textSize="20sp" />

        <Button
            android:id="@+id/magenta"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="M"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="background"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/firstBackGround"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/secondBackGround"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thirdBackGround"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fourthBackGround"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp" />
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="image"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/catButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="cat"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="dog"
                android:textSize="20sp" />

            <Button
                android:id="@+id/parrotButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="parrot"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rndImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="rnd"
                android:textSize="20sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/cat"
        android:layout_marginTop="50dp" />

</LinearLayout>